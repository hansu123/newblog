<%include header%>

<body>

    <div class="container-fluid p-0">
        <!--面包屑开始-->
        <div class="row m-0">
            <nav class="col-12">

                <div class="breadcrumb">

                    <div class="breadcrumb-item"><i class="icon-home mr-1"></i>Home</div>
                    <div class="breadcrumb-item">用户管理</div>
                    <div class="breadcrumb-item">用户列表</div>
                    <div class="d-flex justify-content-end" style="flex-grow:1">
                        <button class="btn btn-sm btn-danger float-right"><i class="icon-repeat"></i></button></div>

                </div>

            </nav>
        </div>
        <!--面包屑结束-->

        <!--头部开始-->
        <div class="row m-0 justify-content-between">

            <div class="col-2 ">
                <div class="input-group input-group-sm mb-3">
                    <input type="text" class="form-control" placeholder="Search.." aria-label="Recipient's username"
                        aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <span class="input-group-text bg-danger text-white" id="basic-addon2"><i class="icon-search"></i></span>
                    </div>
                </div>

            </div>

            <div class="col-3">
                <button class="btn btn-sm btn-info  float-right" data-toggle="modal" data-target="#addAdmin"><i class="icon-plus mr-1"></i>新增用户</button>
                <button class="btn btn-sm btn-danger  float-right  mr-1"><i class="icon-trash mr-1"></i>批量删除</button>
            </div>


        </div>
        <!--头部结束-->

        <!--表格信息开始-->
        <div class="row m-0">


            <div class="col-12">

                <table class="table table-striped table-bordered">
                    <tr>
                        <td><input type="checkbox"></td>
                        <th>ID</th>
                        <th>姓名</th>
                        <th>头像</th>
                        <th>等级</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>1</td>
                        <td>hansu</td>
                        <td><img src=""></td>
                        <td>LV.1</td>
                        <th><i class="text-success icon-circle mr-1"></i>已登录</th>
                        <th><button class="btn btn-sm btn-danger mr-1"><i class="icon-edit"></i></button><button class="btn btn-sm btn-danger"><i
                                    class="icon-trash" data-toggle="modal" data-target="#deleteAdmin"></i></button></th>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>2</td>
                        <td>hansu</td>
                        <td><img src=""></td>
                        <td>LV.1</td>
                        <th><i class="text-secondary icon-circle mr-1"></i>未登录</th>
                        <th><button class="btn btn-sm btn-danger mr-1"><i class="icon-edit"></i></button><button class="btn btn-sm btn-danger"><i
                                    class="icon-trash"></i></button></th>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>3</td>
                        <td>hansu</td>
                        <td><img src=""></td>
                        <td>LV.1</td>
                        <th><i class="text-secondary icon-circle mr-1"></i>未登录</th>
                        <th><button class="btn btn-sm btn-danger mr-1"><i class="icon-edit"></i></button><button class="btn btn-sm btn-danger"><i
                                    class="icon-trash"></i></button></th>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>4</td>
                        <td>hansu</td>
                        <td><img src=""></td>
                        <td>LV.1</td>
                        <th><i class="text-secondary icon-circle mr-1"></i>未登录</th>
                        <th><button class="btn btn-sm btn-danger mr-1"><i class="icon-edit"></i></button><button class="btn btn-sm btn-danger"><i
                                    class="icon-trash"></i></button></th>
                    </tr>
                </table>
                <ul class="pagination m-5 justify-content-center">

                    <li class="page-item"><a class="page-link">上一页</a></li>
                    <li class="page-item active"><a class="page-link">1</a></li>
                    <li class="page-item"><a class="page-link">2</a></li>
                    <li class="page-item"><a class="page-link">3</a></li>
                    <li class="page-item"><a class="page-link">...</a></li>
                    <li class="page-item"><a class="page-link">下一页</a></li>
                    <li class="page-item"><a class="page-link">共10页</a></li>
                </ul>
            </div>


        </div>

        <!--表格信息结束-->



        <!--增加管理员模态框开始-->

        <div class="modal fade" id="addAdmin">
            <div class="modal-dialog">

                <div class="modal-content">

                    <div class="modal-header">添加作者<a class="btn btn-sm close" data-dismiss="modal">&times;</a></div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group row">
                                <label for="username" class="col-sm-2 col-form-label">姓名</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inputPassword" placeholder="name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="phone" class="col-sm-2 col-form-label">头像</label>
                                <div class="col-sm-10">
                                    <input type="file"  id="inputPassword" name="headPhoto" placeholder="phone">
                                    <div class="w-6 h-6 mt-2 border border-secondary" ></div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <lable class="col-sm-2">等级</lable>
                                <div class=" col-sm-10">
                                    <div class="custom-control custom-radio">
                                        <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
                                        <label class="custom-control-label" for="customRadio1">普通游客</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
                                        <label class="custom-control-label" for="customRadio2">专业小编</label>
                                    </div>
                                    <div class="custom-control custom-radio">
                                        <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input">
                                        <label class="custom-control-label" for="customRadio3">高级主编</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row m-4">
                                <div class="col-sm-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-info">提交</button>
                                    <button class="btn btn-default ml-2" data-dismiss="modal">取消</button>
                                </div>
                            </div>

                        </form>

                    </div>



                </div>


            </div>

        </div>


        <!--增加管理员模态框结束-->

        <!--删除管理员模态框开始-->
        <div class="modal fade" id="deleteAdmin">

            <div class="modal-dialog">

                <div class="modal-content">

                    <div class="modal-header bg-default">
                        <p>信息</p>
                        <a class="btn-sm close" data-dismiss="modal">&times;</a>
                    </div>

                    <div class="modal-body">

                        <p>您确定要删除吗？</p>
                        <div class="w-100 d-flex justify-content-end">
                            <button class="btn btn-info">确定</button>
                            <button class="btn btn-default ml-2" data-dismiss="modal">取消</button>
                        </div>
                    </div>



                </div>



            </div>


        </div>


        <!--删除管理员模态框结束-->
    </div>

</body>

</html>